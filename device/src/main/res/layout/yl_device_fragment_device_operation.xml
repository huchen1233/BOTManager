<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/yl_common_block_background"
            android:divider="?android:dividerHorizontal"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yl_device_control_of_work" />

            <Switch
                android:id="@+id/sw_device_run"
                style="@style/yl_device_CleanSwitchStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yl_device_run" />

            <RadioGroup
                android:id="@+id/rg_device_work_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_go_to_idle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_common_standby" />

                <RadioButton
                    android:id="@+id/rb_go_to_garage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_go_to_garage" />

                <RadioButton
                    android:id="@+id/rb_go_to_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:text="@string/yl_device_go_to_recharge" />

                <RadioButton
                    android:id="@+id/rb_go_to_add_water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_go_to_add_water" />

                <RadioButton
                    android:id="@+id/rb_go_to_empty_trash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_go_to_empty_trash" />

                <RadioButton
                    android:id="@+id/rb_go_to_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_common_execute" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/yl_common_block_background"
            android:divider="?android:dividerHorizontal"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yl_device_control_of_cleaning_parts" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/sw_main_sweep"
                    style="@style/yl_device_CleanSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_main_sweep" />

                <Switch
                    android:id="@+id/sw_side_sweep"
                    style="@style/yl_device_CleanSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_side_sweep" />

                <Switch
                    android:id="@+id/sw_left_tail_light"
                    style="@style/yl_device_CleanSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_left_tail_light" />

                <Switch
                    android:id="@+id/sw_right_tail_light"
                    style="@style/yl_device_CleanSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_right_tail_light" />

                <Switch
                    android:id="@+id/sw_sprinkling_water"
                    style="@style/yl_device_CleanSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_sprinkling_water" />

                <Switch
                    android:id="@+id/sw_alarm_light"
                    style="@style/yl_device_CleanSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_alarm_light" />

                <Switch
                    android:id="@+id/sw_front_light"
                    style="@style/yl_device_CleanSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_front_light" />

                <Switch
                    android:id="@+id/sw_horn"
                    style="@style/yl_device_CleanSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_horn" />

                <Switch
                    android:id="@+id/sw_suck_fan"
                    style="@style/yl_device_CleanSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_suck_fan" />

                <Switch
                    android:id="@+id/sw_vibrating_dust"
                    style="@style/yl_device_CleanSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_vibrating_dust" />

                <Switch
                    android:id="@+id/sw_motor"
                    style="@style/yl_device_CleanSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_motor" />

                <Switch
                    android:id="@+id/sw_emergency_stop"
                    style="@style/yl_device_CleanSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yl_device_emergency_stop" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>