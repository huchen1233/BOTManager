<resources>

    <!-- Base application theme. -->
    <style name="yl_common_AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yl_common_colorPrimary</item>
        <item name="colorPrimaryDark">@color/yl_common_colorPrimaryDark</item>
        <item name="colorAccent">@color/yl_common_colorAccent</item>
        <item name="android:windowBackground">@color/yl_common_color_white_gray</item>
    </style>

    <style name="yl_common_ButtonStyle">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/yl_common_button_background</item>
    </style>

    <declare-styleable name="yl_common_ConstraintHeightListView">
        <attr name="yl_common_maxHeight" format="dimension"/>
    </declare-styleable>

    <style name="yl_common_LineLayoutControlStyle">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/yl_common_block_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="yl_common_ControlImgVStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">60dp</item>
    </style>
</resources>
